<p id="notice"><%= notice %></p>

<h1 class="h1">Teams</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Titulos</th>
      <th>Finales</th>
      <th>Seguidores</th>
      <th>Creacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.nombre %></td>
        <td><%= team.titulos %></td>
        <td><%= team.finales %></td>
        <td><%= team.seguidores %></td>
        <td><%= team.creacion %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

